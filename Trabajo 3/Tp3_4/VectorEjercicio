package Ejercicio4;

import java.util.Arrays;

//EJERCICIO 4 TP3
public class VectorEjercicio {
    public static void main(String[] args) {
        //CUERPO PRINCIPAL:
        ArrayEntero vector = new ArrayEntero();
        int[] numeros = {4, 2, 3, 8, 1};
        vector.setNumeros(numeros);

        System.out.println("Cantidad de números: " + vector.getCantidad());
        System.out.println("Número mayor: " + vector.getMayor());
        System.out.println("El promedio de vector es: " + vector.getPromedio());
        System.out.println("El arreglo ordenado de forma ascendente es: " + Arrays.toString(vector.getOrdenAscendente()));
        System.out.println("El arreglo ordenado de forma descendente es: " + Arrays.toString(vector.getOrdenDescendente()));

    }
}